import React, { useEffect, useRef } from "react";
import {
  Modal, View, Text, Pressable, StyleSheet, Dimensions, Animated, Platform,
} from "react-native";
import { useNavigation } from "@react-navigation/native";
import { useThemePro } from "../context/ThemeContext";
import { useApp } from "../context/AppContext.pro";
import { MaterialCommunityIcons, Feather, Ionicons } from "@expo/vector-icons";

const { width } = Dimensions.get("window");

const ItemRow = ({ title, left, onPress, dividerColor }) => {
  // expressive animation: pulse (scale) + shimmer (gold sweep)
  const scale = useRef(new Animated.Value(1)).current;
  const shimmerX = useRef(new Animated.Value(-24)).current;

  useEffect(() => {
    Animated.loop(
      Animated.sequence([
        Animated.timing(scale, { toValue: 1.12, duration: 500, useNativeDriver: true }),
        Animated.timing(scale, { toValue: 1.0, duration: 500, useNativeDriver: true }),
      ])
    ).start();

    Animated.loop(
      Animated.timing(shimmerX, { toValue: 24, duration: 1000, useNativeDriver: true })
    ).start();
  }, []);

  return (
    <Pressable onPress={onPress} style={({ pressed }) => [styles.item, !pressed && { opacity: 1 }]} android_ripple={{ color: "#00000010" }}>
      <View style={styles.itemLeft}>
        <View style={styles.iconWrap}>
          <Animated.View style={{ transform: [{ scale }] }}>
            {left}
            {/* shimmer sweep overlay */}
            <Animated.View
              pointerEvents="none"
              style={[
                styles.shimmer,
                { transform: [{ translateX: shimmerX }] },
              ]}
            />
          </Animated.View>
        </View>
        <Text style={styles.itemLabel}>{title}</Text>
      </View>
      <Ionicons name="chevron-forward" size={18} color="rgba(0,0,0,0.45)" />
      {/* divider handled by parent list container via borderBottom... */}
    </Pressable>
  );
};

export default function DrawerMenuPro({ visible, onClose }) {
  const navigation = useNavigation();
  const { colors } = useThemePro();
  const { subscription } = useApp();

  const go = (route) => {
    onClose?.();
    setTimeout(() => navigation.navigate(route), 140);
  };

  const gold = colors.accent;

  return (
    <Modal visible={visible} transparent animationType="fade" statusBarTranslucent onRequestClose={onClose}>
      <Pressable style={styles.backdrop} onPress={onClose}><View /></Pressable>

      <View
        style={[
          styles.sheet,
          {
            backgroundColor: "#fff",
            borderTopLeftRadius: 24,
            borderBottomLeftRadius: 24,
            shadowColor: "#000",
          },
        ]}
      >
        <Text style={[styles.title, { color: gold }]}>OmniTintAI Studio</Text>

        <View style={[styles.list, { borderColor: colors.divider }]}>
          {/* Hair Health Scanner */}
          <View style={[styles.divide, { borderBottomColor: colors.divider }]} />
          <ItemRow
            title="Hair Health Scanner"
            dividerColor={colors.divider}
            left={
              <MaterialCommunityIcons
                name={subscription?.premium ? "heart-pulse" : "lock-outline"}
                size={22}
                color={gold}
              />
            }
            onPress={() => go("HairHealthScanner")}
          />
          <View style={[styles.divide, { borderBottomColor: colors.divider }]} />

          {/* 360 Preview */}
          <ItemRow
            title="360° Preview"
            dividerColor={colors.divider}
            left={<MaterialCommunityIcons name="cube-outline" size={22} color={gold} />}
            onPress={() => go("AR360Preview")}
          />
          <View style={[styles.divide, { borderBottomColor: colors.divider }]} />

          {/* AI Chatbox */}
          <ItemRow
            title="AI Chatbox"
            dividerColor={colors.divider}
            left={<Ionicons name="chatbubble-ellipses-outline" size={22} color={gold} />}
            onPress={() => go("AIChat")}
          />
          <View style={[styles.divide, { borderBottomColor: colors.divider }]} />

          {/* Settings */}
          <ItemRow
            title="Settings"
            dividerColor={colors.divider}
            left={<Ionicons name="settings-outline" size={22} color={gold} />}
            onPress={() => go("Settings")}
          />
          <View style={[styles.divide, { borderBottomColor: colors.divider }]} />
        </View>

        <Pressable onPress={onClose} style={styles.close}>
          <Text style={styles.closeTxt}>Close ✕</Text>
        </Pressable>
      </View>
    </Modal>
  );
}

const styles = StyleSheet.create({
  backdrop: { flex: 1, backgroundColor: "rgba(0,0,0,0.30)" },
  sheet: {
    position: "absolute",
    right: 0,
    top: Platform.select({ ios: 0, android: 8 }),
    bottom: Platform.select({ ios: 0, android: 8 }),
    width: width * 0.72,
    paddingTop: 56,
    paddingHorizontal: 18,
    elevation: 12,
  },
  title: { fontSize: 18, fontWeight: "800", marginBottom: 14 },
  list: {
    backgroundColor: "#fff",
    borderRadius: 14,
    borderWidth: StyleSheet.hairlineWidth,
    overflow: "hidden",
  },
  divide: { borderBottomWidth: StyleSheet.hairlineWidth },
  item: {
    paddingVertical: 14,
    paddingHorizontal: 10,
    flexDirection: "row",
    alignItems: "center",
    justifyContent: "space-between",
    backgroundColor: "#fff",
  },
  itemLeft: { flexDirection: "row", alignItems: "center" },
  iconWrap: { width: 30, height: 30, alignItems: "center", justifyContent: "center", marginRight: 10 },
  itemLabel: { fontSize: 15, fontWeight: "600", color: "#000" },
  close: { alignItems: "center", paddingVertical: 14 },
  closeTxt: { color: "#000", fontWeight: "700" },
  shimmer: {
    position: "absolute",
    width: 18,
    height: 18,
    borderRadius: 9,
    backgroundColor: "rgba(255, 215, 130, 0.45)", // golden glint
    top: 6,
    left: -24,
    opacity: 0.7,
  },
});
